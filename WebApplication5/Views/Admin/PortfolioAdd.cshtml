@model WebApplication5.Models.MVVM.Portfolio
@{
    ViewData["Title"] = "PortfolioAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="portlet box red">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> PORTFOLYO BİLGİSİ GİRİŞ FORMU
        </div>
    </div>
    <div class="portlet-body form">
        <form role="form" action="/Admin/PortfolioAdd" method="post" enctype="multipart/form-data">
            <div class="form-body">

                <div class="form-group">
                    <label asp-for="PortfolioName">PORTFOLYO İSİM</label>
                    <input type="text" class="form-control" asp-for="PortfolioName" placeholder="Portfolyo İsim" required>
                    <span asp-validation-for="PortfolioName"></span>
                    <label asp-for="WebAddress">PORTFOLYO ADRESİ</label>
                    <input type="text" class="form-control" asp-for="WebAddress" placeholder="Portfolyo Adresi" required>
                    <span asp-validation-for="WebAddress"></span>
                </div>


                <div class="form-group">
                    <label>PORTFOLYO FOTOĞRAFI</label>
                    <input type="file" asp-for="Photo" name="photo" id="exampleInputFile1" required>
                    <p class="help-block">
                        Portfolyo fotoğrafı seçiniz
                    </p>
                    <span asp-validation-for="Photo"></span>
                </div>
            </div>
            <div class="form-actions right">
                <button asp-action="Index" type="button" class="btn default">İPTAL</button>
                <button type="submit" name="name" class="btn green" onclick="return ('KAYDEDİLDİ')">KAYDET</button>
            </div>
        </form>
    </div>
</div>

