@model WebApplication5.Models.MVVM.Portfolio

@{
    ViewData["Title"] = "PortfolioEdit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="portlet box red">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> PORTFOLYO DÜZENLEME FORMU
        </div>
        <div class="tools">
            <a href="" class="collapse">
            </a>
            <a href="#portlet-config" data-toggle="modal" class="config">
            </a>
            <a href="" class="reload">
            </a>
            <a href="" class="remove">
            </a>
        </div>
    </div>
    <div class="portlet-body form">
        <form role="form" action="/Admin/PortfolioEdit/" method="post" enctype="multipart/form-data">
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="PortfolioName">PORTFOLYO İSİM-SOYİSİM</label>
                    <input type="text" class="form-control" asp-for="PortfolioName" placeholder="Portfolyo İsim" required>
                    <span asp-validation-for="PortfolioName"></span>
                    <label asp-for="WebAddress">PORTFOLYO ADRESİ</label>
                    <input type="text" class="form-control" asp-for="WebAddress" placeholder="Portfolyo Adresi" required>
                    <span asp-validation-for="WebAddress"></span>

                  


                </div>
                <div class="form-group">
                    <label class="col-md-1 control-label">Aktif Mi?</label>
                    <div>
                        <input asp-for="Active" />
                    </div>
                </div>

                <div class="form-group">
                   
                    <label>PORTFOLYO LOGOSU</label>
                    <input type="file" asp-for="Photo" name="Photo" id="exampleInputFile1">
                    <p class="help-block">
                        Portfolyo fotoğrafı seçiniz
                    </p>
                </div>

                


            </div>
            <input type="hidden" asp-for="PortfolioID" />

            <div class="form-actions right">
                <button asp-action="Index" class="btn default">İPTAL</button>
                <button type="submit" name="name" class="btn green" onclick="return ('KAYDEDİLDİ')">KAYDET</button>
            </div>
        </form>
    </div>
</div>


