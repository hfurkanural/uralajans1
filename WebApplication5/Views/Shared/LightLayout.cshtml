@{
    UralAjansContext context = new UralAjansContext();
    string email = context.Settings.FirstOrDefault().Email;
    string phone = context.Settings.FirstOrDefault().PhoneNumber;
    string address = context.Settings.FirstOrDefault().Address;
    string facebook = context.Settings.FirstOrDefault().Facebook;
    string twitter = context.Settings.FirstOrDefault().Twitter;
    string linkedin = context.Settings.FirstOrDefault().LinkedIn;
    string instagram = context.Settings.FirstOrDefault().Instagram;

    string dark = ViewBag.Title;
    string replaced = dark.Replace("Light", " ");
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Baslik</title>
</head>
<body>
    <div>
        <!DOCTYPE html>
        <html lang="en">

        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Home - 2</title>

            <!-- Fav Icon -->
            <link rel="icon" type="image/x-icon" href="~/imgs/logo/favicon.png">

            <link rel="stylesheet" href="~/css/all.min.css">
            <link rel="stylesheet" href="~/css/bootstrap.min.css">
            <link rel="stylesheet" href="~/css/swiper-bundle.min.css">
            <link rel="stylesheet" href="~/css/meanmenu.min.css">
            <link rel="stylesheet" href="~/css/magnific-popup.css">
            <link rel="stylesheet" href="~/css/master.css">
            <link rel="stylesheet" href="~/style.css">

        </head>

        <body>


            <!-- Switcher Area Start -->
            <div class="switcher__area">
                <ul class="mode">
                    <li><a href="@replaced">Dark</a></li>
                    <li><a href="@ViewBag.Title" class="active">light</a></li>
                </ul>
                <div class="switcher__btn mode-type">
                    <button class="active" data-mode="ltr">LTR</button>
                    <button data-mode="rtl">RTL</button>
                </div>
            </div>
            <!-- Switcher Area End -->
            <!-- Go to Top -->
            <button class="cxu--go-top">
                <span class="icon-1"><img src="~/imgs/shape/go-top.png" alt="Icon"></span>
                <span class="icon-2"><img src="~/imgs/shape/go-top.png" alt="Icon"></span>
            </button>


            <!-- Preloader -->
            <div class="cxu-preloader">
                <div class="wrapper">
                    <div class="lines">
                        <span class="line line-1"></span>
                        <span class="line line-2"></span>
                        <span class="line line-3"></span>
                        <span class="line line-4"></span>
                        <span class="line line-5"></span>
                        <span class="line line-6"></span>
                        <span class="line line-7"></span>
                        <span class="line line-8"></span>
                        <span class="line line-9"></span>
                    </div>
                    <div class="text">Loading...</div>
                </div>
            </div>


            <div id="smooth-wrapper">
                <div id="smooth-content">

                    <!-- Header section start -->
                    <header class="header__area-2">
                        <div class="header__wrapper-2">
                            <div class="header__logo">
                                <a href="/Home/IndexLight"><img src="~/imgs/logo/logo.png" alt="Logo"></a>
                            </div>
                            <div class="header__menu-2">
                                <nav class="main-menu">
                                    <ul>
                                        <li>
                                            <a href="/Home/IndexLight">Ana Sayfa</a>
                                        </li>

                                        <li>
                                            <a href="/Home/AboutUsLight">Hakkımızda</a>
                                        </li>
                                        <li>
                                            <a href="/Home/ServicesLight">Hizmetlerimiz</a>
                                        </li>
                                        <li>
                                            <a href="/Home/PortfolioLight">Portfolyo</a>
                                        </li>
                                        <li><a href="/Home/ContactLight">İletişim</a></li>
                                    </ul>
                                </nav>
                            </div>                             
                            <div class="header__others-2">
                                <button class="open__menu"><img src="~/imgs/logo/hamburger-2.png" alt="Icon"></button>
                            </div>
                         </div>
                    </header>
                    <!-- Header section end -->
                    @RenderBody()
                    <!-- Footer section start -->
                    <footer class="footer__area">
                        <div class="footer__top-wrapper">
                            <div class="container">
                                <div class="footer__top">
                                    <div class="footer__logo">
                                        <img src="~/imgs/logo/logo-2.png" alt="Logo">
                                    </div>
                                    <div class="footer__widget">
                                        <h3 class="footer__title">Biz Kimiz</h3>
                                        <ul class="footer__menu">
                                            <li><a href="/Home/AboutUsLight">Hakkımızda</a></li>
                                            <li><a href="/Home/PortfolioLight">Portfolyo</a></li>
                                            <li><a href="/Home/ContactLight">İletişim</a></li>
                                        </ul>
                                    </div>
                                    <div class="footer__widget">
                                        <h3 class="footer__title">Hizmetlerimiz</h3>
                                        <ul class="footer__menu">
                                            <li><a href="/Home/GraphicDesignDetailLight">Grafik Tasarım</a></li>
                                            <li><a href="/Home/SoftwareDevelopmentDetailLight">Yazılım Hizmeti</a></li>
                                            <li><a href="/Home/WebDesignDetailLight">Web Tasarım</a></li>
                                            <li><a href="/Home/EcommerceDetailLight">E-Ticaret Danışmanlığı</a></li>
                                        </ul>
                                    </div>
                                    <div class="footer__newsletter">
                                        @await Html.PartialAsync("~/Views/Home/Mailing.cshtml")
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="footer__btm-wrapper">
                            <div class="container">
                                <div class="footer__btm">
                                    <div class="footer__contact">
                                        <h4 class="title">Bize E-Posta Gönderin</h4>
                                        <a href="mailto:@email">@email</a>
                                    </div>
                                    <div class="footer__contact">
                                        <h4 class="title">Bizi Arayın</h4>
                                        <a href="tel:@phone">@phone</a>
                                    </div>
                                    <div class="footer__contact">
                                        <h4 class="title">Adresimiz</h4>
                                        <a>@address</a>
                                    </div>
                                    <div class="footer__social-wrapper">
                                        <ul class="footer__social">
                                            <li>
                                                <a href="http://www.@facebook" target="_blank">
                                                    <i class="fa-brands fa-facebook-f"></i>
                                                </a>
                                            </li>
                                            <li><a href="http://www.@twitter" target="_blank"><i class="fa-brands fa-twitter"></i></a></li>
                                            <li>
                                                <a href="http://www.@linkedin" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                                            </li>
                                            <li>
                                                <a href="http://www.@instagram" target="_blank"><i class="fa-brands fa-instagram"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </footer>
                    <!-- Footer section end -->


                </div>
            </div>



            <script src="~/js/jquery-3.6.1.min.js"></script>
            <script src="~/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/swiper-bundle.min.js"></script>
            <script src="~/js/jquery.meanmenu.min.js"></script>
            <script src="~/js/counter.js"></script>
            <script src="~/js/gsap.min.js"></script>
            <script src="~/js/ScrollSmoother.min.js"></script>
            <script src="~/js/ScrollTrigger.min.js"></script>
            <script src="~/js/SplitText.min.js"></script>
            <script src="~/js/jquery.magnific-popup.min.js"></script>
            <script src="~/js/main.js"></script>
        </body>

    </html>

</div>
</body>
</html>
